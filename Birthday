<body>
    <h1>ðŸŽ‰ Countdown to My Birthday! ðŸŽ‚</h1>
    <div id="countdown">Loading...</div>

    <script>
        function countdownToBirthday(month, day) {
            const now = new Date();
            const currentYear = now.getFullYear();

            // Set the next birthday
            let birthday = new Date(currentYear, month - 1, day);
            if (now > birthday) {
                birthday = new Date(currentYear + 1, month - 1, day);
            }

            // Update the countdown every second
            setInterval(() => {
                const now = new Date();
                const diff = birthday - now;

                const days = Math.floor(diff / (1000 * 60 * 60 * 24));
                const hours = Math.floor((diff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                const minutes = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));
                const seconds = Math.floor((diff % (1000 * 60)) / 1000);

                document.getElementById("countdown").innerHTML =
                    `${days} days, ${hours} hours, ${minutes} minutes, ${seconds} seconds remaining!`;
            }, 1000);
        }

        // Replace with your birthday
        countdownToBirthday(5, 15); // Example: May 15
    </script>
</body>
